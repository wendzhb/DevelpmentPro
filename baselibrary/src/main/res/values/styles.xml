<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dialog" parent="@android:style/Theme.Dialog">\

        <!--边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--提示框是否透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--提示框背景颜色-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否充许对话框的背景模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--无标题-->
        <item name="android:windowNoTitle">true</item>

    </style>
    
    <style name="dialog_from_bottom_anim">
        <item name="android:windowEnterAnimation">@anim/dialog_from_bottom_anim_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_from_bottom_anim_out</item>
    </style>

    <style name="dialog_scan_anim">
        <item name="android:windowEnterAnimation">@anim/dialog_scan_anim_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_scan_anim_out</item>
    </style>
</resources>